<div class="main user-show">
  <div class="container">
    <div class="user">
      <% if @user.image.attached? %>
        <%= image_tag @user.image %>
      <% else %>
        <%= image_tag "/images/default.jpg", class: "user-img"%>
      <% end %>
      <h2><%= @user.nickname %></h2>
      <p><%= @user.email %></p>
      <p>
      フォロー数：<%= link_to @user.followings.count, follows_user_path(@user.id), id:"follow-count" %>
      フォロワー数：<%= link_to @user.followers.count, followers_user_path(@user.id), id:"follow-count" %>
      </p>

      <% if current_user != @user %>
        <% if @user.followed_by?(current_user) %>
          <p><%=link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %></p>
        <% else %>
          <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
        <% end %>
      <% end %>

      <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(@user.id) %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li><%= link_to "投稿", user_path(@user.id) %></li>
      <li ><%= link_to "いいね!", likes_user_path(@user.id) %></li>
      <li class="active"><%=link_to "フォロー", follows_user_path(@user.id) %></li>
      <li><%=link_to "フォロワー", followers_user_path(@user.id) %></li>
    </ul>

    <% @users.each do |user| %>

      <div class="posts-index-item">
        <div class="post-left">
          <% if user.image.attached? %>
            <%= image_tag user.image %>
          <% else %>
            <%= image_tag "/images/default.jpg", class: "user-img"%>
          <% end %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to user.nickname, user_path(user.id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
