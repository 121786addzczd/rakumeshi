<% breadcrumb :user_edit %>
<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body">

        <%= form_with model: @user, url: user_path(current_user), local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>

          <div class="field">
            <%= f.label :nickname, "ユーザー名" %>
            <%= f.text_field :nickname %>
          </div>
          <div class="field">
            <%= f.label :image, "プロフィール画像" %><br />
              <div id="js-image"></div>
            <%= f.file_field :image, class: :form_image %>
          </div>
          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>
          </div>
          <div class="field">
            <%= f.label :自己紹介, "自己紹介" %>
            <%= f.text_area :self_introduction %>
          </div>

          <div class="actions">
            <%= f.submit "保存", class: :form__btn  %>
          </div>
        <% end %>

        <p class="devise-link">
          <%= link_to "編集を中止して戻る", user_path(current_user) %>
        </p>

      </div>
    </div>
  </div>
</div>