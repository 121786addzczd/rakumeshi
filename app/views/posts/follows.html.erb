<% breadcrumb :posts_follows %>
<div class="main posts-index">
  <div class="container">
    <h1 class="form-heading">フォロー中のツイート</h1>
    <% @posts.includes(:user).each do |post| %>
    <div class="posts-index-item">
        <div class="post-left">
          <% if post.user.image.attached? %>
            <%=link_to image_tag post.user.image %>
          <% else %>
            <%= image_tag "/images/default.jpg", class: "user-img"%>
          <% end %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to post.user.nickname, post_path(post.id) %>
          </div>
            <%= link_to post.content, post_path(post.id) %>
            <p class="post-date"><%= post.created_at.strftime("%Y年%m月%d日") %></p>
        </div>
    </div>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
