<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
      <%= form_with(model: @post, local: true) do |f| %>
        <div class="form">
          <div class="form-body">
            <%= f.text_area :content, placeholder:" 40文字まで投稿できます", maxlength:"40" %>
            <%= f.submit "保存"%>
          </div>
        </div>
      <% end %>
  </div>
</div>