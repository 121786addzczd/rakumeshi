<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード   (6文字以上)" %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: :form__btn  %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form users-form">
      <div class="form-body">
        <p class="gest-login">
          <%= link_to users_guest_sign_in_path, method: :post, class: "gest-login-btn" do %>
            <span class="fas fa-power-off"> ゲストユーザーとしてお試しログイン</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>